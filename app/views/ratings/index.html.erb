<h2>Ratings</h2>

<p> Number of ratings: <%= @ratings.count %> </p>


<div class="row">
    <div class="col-md-4"><%= render 'list', items: @topbreweries, itemname: "Breweries" %></div>
    <div class="col-md-4"><%= render 'list', items: @topbeers, itemname: "Beers" %></div>
    <div class="col-md-4"><%= render 'list', items: @topstyles, itemname: "Styles" %></div>
</div>

<h2>Most active users: </h2>

<table class="table table-hover">
  <thead>
  <tr>
    <th></th>
    <th>Favorite beer</th>
    <th>Preferred style</th>
    <th>Favorite brewery</th>
    <th>Ratings</th>
  </tr>
  </thead>

  <tbody>
  <% @topraters.each do |user| %>
      <tr>
        <td> <%= user.username %> </td>
        <td><%= user.favorite_beer %></td>
        <td><%= user.favorite_style %></td>
        <td><%= user.favorite_brewery.name %></td>
        <td><%= user.ratings.count %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<h2>Most recent ratings: </h2>
<table class="table table-hover">
  <thead>
  </thead>

  <tbody>
  <% @ratings.recent.each do |r| %>
      <tr>
        <td> <%= r %> </td>
      </tr>
  <% end %>
  </tbody>
</table>












<%= link_to 'New rating', new_rating_path, class:"btn btn-primary" %>






