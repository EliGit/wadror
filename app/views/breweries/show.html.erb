<p id="notice"><%= notice %></p>

<p>
  <h2>
    <%= @brewery.name %>
  </h2>
</p>

<p>
  <i>Established in:
  <%= @brewery.year %>
  </i>
</p>

<p>
  <strong>Amount of beers:</strong>
  <%= @brewery.beers.count %>
</p>

<ul>
  <% @brewery.beers.each do |beer| %>
      <li><%=link_to beer.name, beer %></li>
  <% end %>
</ul>

<p>
  <% if @brewery.ratings.empty? %>
      Brewery's beers have no ratings!
  <% else%>
      Has <%=@brewery.ratings.count%> <%="rating".pluralize(@brewery.ratings.count)%>, average: <%= @brewery.average_rating%>
  <% end %>
</p>

<%= link_to 'Edit', edit_brewery_path(@brewery), class:"btn btn-primary" if current_user%>


<% unless current_user.nil? %>
    <%if current_user.admin%>
    <%= link_to 'Destroy', @brewery, class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
    <%end%>
<%end%>
