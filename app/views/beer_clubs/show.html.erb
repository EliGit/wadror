<p id="notice"><%= notice %></p>


<h1><%= @beer_club.name %></h1>


<p>Founded <%= @beer_club.founded %></p>


<p>
  <strong>City:</strong>
  <%= @beer_club.city %>
</p>

<p>
  <strong>Users</strong>
    <ul>
      <% @beer_club.members.each do |member| %>
          <li> <%= link_to member.username, member %> </li>
      <% end %>
    </ul>
</p>

<% unless current_user.nil? or current_user.beer_clubs.include?(@beer_club)%>
    <%= form_for(@membership) do |f| %>
        <%= f.hidden_field :beer_club_id %>
        <%= f.submit value:"join the club", class:"btn btn-primary"%>
    <% end%>
<% end %>


<%= link_to 'Edit', edit_beer_club_path(@beer_club), class:"btn btn-primary" if current_user%>

<% unless current_user.nil? %>
    <%if current_user.admin%>
        <%= link_to 'Destroy', @beer_club, class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
    <%end%>
<%end%>